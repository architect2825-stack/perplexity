{
  "name": "perplexity",
  "version": "1.0.0",
  "description": "AI-powered research assistant - full-stack web application",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "build": "npm run build --workspaces --if-present",
    "start": "cd server && npm start",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ai",
    "research",
    "search",
    "assistant",
    "perplexity"
  ],
  "author": "architect2825-stack",
  "license": "MIT"
}
